{
  "manifest_version": 3.2,
  "name": "Chatwork Groupy",
  "version": "3.2",
  "description": "ChatworkのチャットルームをグループでまとめるChrome拡張機能です。",
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Chatwork Groupy",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.chatwork.com/*"
      ],
      "js": [
        "Sortable.min.js",
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ]
} 